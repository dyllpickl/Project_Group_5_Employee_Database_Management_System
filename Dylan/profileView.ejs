<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>CS312 Group-Project</title>
    </head>
    <body>

        <% if (errorMessage) { %>
            <script>
                alert("<%= errorMessage %>");
            </script>
        <% } %>

        <h1>Employee Database Management System</h1>
        <h3><%= viewText %></h3>
        <% profiles.forEach((profile) => { %>
            <div class="card mb-5">
                <div class="card-body">
                    <p>Employee Name: <%= profile.first_name %> <%= profile.last_name %> </p>
                    <p>Profile Type : <%= profile.profile_type %> </p>
                    <p>SSN          : <%= profile.ssn%> </p>
                    <p>Email        : <%= profile.email%> </p>
                    <p>Phone Number : <%= profile.phone_number%> </p>

                    <div class="btn-toolbar">
                        <a href="/editProfile/<%= profile.profile_id %>" class="btn btn-secondary" style="margin-right: 10px;">Edit</a>
                        <a href="/deleteProfile/<%= profile.profile_id %>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </body>
</html>
